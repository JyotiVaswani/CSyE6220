<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>

        <session-factory>
            <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
            <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
            <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/techworldhustle</property>
            <property name="hibernate.connection.username">root</property>
            <property name="hibernate.connection.password">root123</property>
            <property name="hibernate.show_sql">true</property>
            <property name="hibernate.hbm2ddl.auto">update</property>
            
            <mapping resource="Candidate.hbm.xml"/>
            <mapping resource="Recruiter.hbm.xml"/>
            <mapping resource="Job.hbm.xml"/>
            <mapping resource="Application.hbm.xml"/>
            <mapping resource="Skill.hbm.xml"/>
            <mapping resource="Company.hbm.xml"/>
            <mapping resource="CompanyReview.hbm.xml"/>
            <mapping resource="IndividualRating.hbm.xml"/>
            <mapping resource="MarketValueSalary.hbm.xml"/>
            <mapping resource="JobAlerts.hbm.xml"/>
            <mapping resource="WalkInDrive.hbm.xml"/>
        </session-factory>
</hibernate-configuration>
